{% extends '::base.html.twig' %}


{% block login %}
    {# button login / inscription #}
    <nav class="menu-login-fish ">
        <h1 class="cache-fish">Area sign in /sign out</h1>
        <ul>

            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ app.user.username }}
                <a href="{{ path('fos_user_profile_show') }}">
                    <img class="mini-image-fish"  src="
                        {% if app.user.image == true %}
                            {{ asset('uploads/images/') ~ app.user.image }}
                            {% else %}
                            {{ asset('uploads/images/geek.jpg') }}
                        {% endif %}" width="60" alt="{{ app.user.username }}
                    ">
                </a>
            {% else %}
                <li><a href="{{ path('fos_user_registration_register') }}" class="btn-fish">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></li>
                <li><a href="{{ path('fos_user_security_login') }}" class="btn-fish">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
            {% endif %}

            {#Message alert#}
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="{{ type }} alert-fish animated fadeInRight">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}

        </ul>
        <article id="wrapper">{#
            <main id="main-dashbord-fish">
                <nav id="nav-dashbord-fish">
                    <h2>{{ 'fish.dashbord'|trans({}, 'AcmeFishBlockBundle') }}</h2>
                    <ul>
                        <li>
                            <a href="">
                                <i class="fa fa-users">{{ 'fish.contact'|trans({}, 'AcmeFishBlockBundle') }}</i>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope-o">{{ 'fish.mailbox'|trans({}, 'AcmeFishBlockBundle') }}</i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <aside id="content-fish">
                    <ul class="btn-dashbord-fish">
                        <a href="#" class="toggle-nav btn-nav">
                            <li></li>
                            <li></li>
                            <li></li>
                        </a>
                    </ul>
                </aside>
            </main>
        </article>#}
    </nav>
{% endblock %}

{% block body %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <a href="{{ path('fos_user_security_logout') }}" class="logout-fish">
       <i class="fa fa-power-off"></i> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
    </a>
    {% endif %}
    <article class="login-form-fish">
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </article>
{% endblock %}