{% extends '::base.html.twig' %}

{% use 'AcmeFishBlockBundle:Series:select_genres.html.twig' %}

{% block body %}
    {% for serie in series %}
        <div class="block">
            <h2>{{ serie.titre }}</h2>
            <div class="tags-list">{% for Genre in serie.listeDesGenres %}{% if loop.index > 1 %},{% endif %} <span class="badge">{{ Genre.label }}</span>{% endfor %}</div>
            <div class="illustration">
                {% if serie.image.name is defined %}
                    <img src="{{ serie.image.name }}" width="100%" />
                {% else %}
                    <span class="fa fa-ban"></span>
                {% endif %}
            </div>
            <div class="description">
                {{ serie.description }}
            </div>
            <div class="read-more">
                <a class="btn btn-primary btn-small" href="#">View</a>
            </div>
        </div>
    {% else %}<div class="alert">Désolé, il n'y a aucun serie dans cette section</div>
    {% endfor %}
{% endblock %}