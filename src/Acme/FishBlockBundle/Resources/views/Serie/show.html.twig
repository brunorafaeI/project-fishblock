{% extends '::base.html.twig' %}
{% use 'AcmeFishBlockBundle:Admin:sidebar_admin.html.twig' %}

{% block body -%}
    <h1>{{ 'fish.serie'|trans({}, 'AcmeFishBlockBundle') }}</h1>

    <table class="record_properties table">
        <tbody>
        <tr>
            <th>Id:</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Titre:</th>
            <td>{{ entity.titre }}</td>
        </tr>
        <tr>
            <th>Image:</th>
            <td><img src="{{ entity.image.name }}" class="img-serie-fish" /></td>
        </tr>
        </tr>
        <tr>
            <th>Description:</th>
            <td>{{ entity.description }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('serie') }}">
                <span class="fa fa-arrow-circle-left"></span> {{ 'fish.back_list'|trans({}, 'AcmeFishBlockBundle') }}
            </a>
        </li>
        <br>
        <li>
            <a href="{{ path('serie_edit', { 'id': entity.id }) }}">
                <span class="fa fa-edit"></span> {{ 'fish.edit'|trans({}, 'AcmeFishBlockBundle') }}
            </a>
        </li>
        <br>
        <li onclick="return confirm('Voullez-vous vraiment supprimer cette sÃ©rie?')">{{ form(delete_form)}}</li>
    </ul>
{% endblock %}
