{% extends 'base.html.twig' %}

{% block body %}
    <h1>Season</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Episodes</th>
                <td>{{ season.episodes }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('season_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('season_edit', { 'id': season.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
